#!/usr/bin/env bash
set -e

source "$FASRCSW_DEV/setup.sh"  #(bash arrays cannot be exported, so get them this way)
fasrcsw-env-check

for comp in "${FASRCSW_COMPS[@]}"; do
	IFS=/ read -r comp_name comp_versionrelease <<< "$comp"
	IFS=- read -r comp_version comp_release     <<< "$comp_versionrelease"
	
	echo
	echo
	echo "fasrcsw: building an rpm"
	echo

	set +e
	set -x
	fasrcsw-rpmbuild-Core \
		--define "comp_name $comp_name" --define "comp_version $comp_version" --define "comp_release $comp_release" \
		"$@"
	status=$?
	set +x
	if [ $status -ne 0 ]; then
		inspect=false
		
		##it's not great seeing this for an 'inspect' build, but there is no good way to tell if the failure was from that or earlier, so skip this
		#for arg in "$@"; do
		#	if [ "$arg" = 'inspect yes' ]; then
		#		inspect=true
		#		break
		#	fi
		#done

		if ! $inspect; then
			echo "*** ERROR *** the following fasrcsw-rpmbuild-Core command failed:" >&2
			echo -n "    fasrcsw-rpmbuild-Core"

			echo -n " '--define' 'comp_name $comp_name'"
			echo -n " '--define' 'comp_version $comp_version'"
			echo -n " '--define' 'comp_release $comp_release'"
			for arg in "$@"; do
				echo -n " '$arg'"
			done
			echo
		fi
		
		exit $status
	fi
	set -e
done

echo fasrcsw-rpmbuild-Comp SUCCESS
